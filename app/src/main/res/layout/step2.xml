<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_create_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/when_summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-18dp"
        android:paddingBottom="6dp">
        <TextView
            android:id="@+id/when_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/w4mAccent"
            android:textSize="64sp"
            android:layout_centerInParent="true" />
        <TextView
            android:layout_below="@id/when_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/w4mAccent"
            android:text="SEGUNDA-FEIRA"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/month_container"
        android:layout_below="@id/when_summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:tint="@color/w4mAccent"
            android:padding="8dp"
            android:src="@drawable/ic_navigate_before_white_24dp"/>

        <TextView
            android:id="@+id/month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="OUTUBRO"
            android:textSize="18sp"
            android:textColor="@color/w4mAccent"
            android:textStyle="bold" />

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:tint="@color/w4mAccent"
            android:padding="12dp"
            android:src="@drawable/ic_navigate_next_white_24dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/when_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/month_container"
        android:background="@color/w4mAccent" />

    <GridView
        android:id="@+id/month_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/when_separator"
        android:orientation="horizontal">


    </GridView>

</RelativeLayout>
