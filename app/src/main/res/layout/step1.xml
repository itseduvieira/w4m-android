<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/map_place"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/example_map" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:scaleType="fitStart"
            android:src="@drawable/ic_place_white_48dp"
            android:tint="@color/w4mAccent" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/place_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_place"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-35dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEU LOCAL"
                android:textSize="10sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@id/place_title">

                <ImageView
                    android:id="@+id/place_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_place_white_48dp"
                    android:tint="@color/w4mAccent" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/place_icon">

                    <TextView
                        android:id="@+id/place_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:text="Av Paulista, 1000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/place_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/place_main"
                        android:layout_marginTop="-4dp"
                        android:textAllCaps="true"
                        android:text="Bela Vista - São Paulo - SP"
                        android:textSize="10sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/place_change"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_edit_white_36dp"
                    android:tint="@color/w4mGray" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_info"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEU CARRO"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="25dp"
                android:text="VOCÊ NÃO POSSUI NENHUM CARRO CADASTRADO" />

            <Button
                android:id="@+id/btn_add_car"
                style="@style/W4MTheme.Button.Primary"
                android:layout_below="@id/car_empty_message"
                android:src="@drawable/ic_add_white_24dp"
                android:text="ADICIONAR UM CARRO" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
