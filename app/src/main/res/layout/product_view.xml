<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="1dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/download_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/w4mLightAlpha"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cloud_download_black_48dp"
            android:tint="@color/w4mGray"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/w4mDarkAlpha"
            android:padding="6dp">

            <RelativeLayout
                android:id="@+id/product_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/product_detail">

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:textAllCaps="true"
                    android:textColor="@color/w4mTextColorInverse"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_title"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:text="Description"
                    android:textColor="@color/w4mTextColorInverse"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$50"
                    android:textColor="@color/w4mTextColorInverse"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/checked_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/w4mDarkAlpha"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/w4mAccent"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_white_48dp"
                android:tint="@color/w4mAccent" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>