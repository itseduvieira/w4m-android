<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/w4mPrimary</item>
        <item name="colorPrimaryDark">@color/w4mPrimaryDark</item>
        <item name="colorAccent">@color/w4mAccent</item>
    </style>

    <style name="W4MTheme" parent="AppTheme">
        <item name="android:typeface">sans</item>
        <item name="android:windowBackground">@color/w4mActivityBase</item>
    </style>

    <style name="W4MTheme.Splash.Fullscreen" parent="W4MTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="W4MTheme.Toolbar" parent="W4MTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/w4mPrimary</item>
        <item name="titleTextColor">@color/w4mTextColorInverse</item>
        <item name="titleTextStyle">@style/W4MTheme.Toolbar.Title</item>
        <item name="subtitleTextColor">@color/w4mTextColorInverse</item>
        <item tools:ignore="NewApi" name="android:elevation">4dp</item>
    </style>

    <style name="W4MTheme.Toolbar.Large" parent="W4MTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@color/w4mPrimary</item>
        <item name="titleTextColor">@color/w4mTextColorInverse</item>
        <item tools:ignore="NewApi" name="android:elevation">4dp</item>
    </style>

    <style name="W4MTheme.Toolbar.Title" parent="W4MTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="W4MTheme.FAB" parent="W4MTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item tools:ignore="NewApi" name="android:elevation">6dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="W4MTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/w4mTextColorInverse</item>
        <item name="android:textAllCaps">true</item>
        <item tools:ignore="NewApi" name="android:elevation">2dp</item>
    </style>

    <style name="W4MTheme.Button.Primary" parent="W4MTheme.Button">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="W4MTheme.Button.Accent" parent="W4MTheme.Button">
        <item name="android:background">@drawable/btn_accent</item>
    </style>

    <style name="W4MTheme.Button.Bottom" parent="W4MTheme.Button">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="W4MTheme.Button.Bottom.Primary" parent="W4MTheme.Button.Bottom">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="W4MTheme.Button.Bottom.Accent" parent="W4MTheme.Button.Bottom">
        <item name="android:background">@drawable/btn_accent</item>
    </style>

    <style name="W4MTheme.Button.Bottom.Transparent" parent="W4MTheme.Button.Bottom">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/w4mAccent</item>
    </style>

    <style name="W4MTheme.EditText" parent="W4MTheme">

    </style>

    <style name="W4MTheme.EditText.Inverse" parent="W4MTheme.EditText">
        <item name="backgroundTint">@color/w4mTextColorInverse</item>
        <item name="android:textColor">@color/w4mTextColorInverse</item>
    </style>

    <style name="W4MTheme.Button.Hour" parent="W4MTheme.Button">
        <item name="android:background">@drawable/rounded</item>
        <item tools:ignore="NewApi" name="android:elevation">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/w4mDarkAlpha</item>
    </style>

</resources>
